{
  "editor.codeActionsOnSave": {
    // ES Lint 저장 시 자동 fix 설정
    "source.fixAll.eslint": true
  },
  // document formatting 자동 fix 설정
  "editor.formatOnSave": true,
  // default formatter 설정 (esbenp.prettier-vscode: prettier)
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.tabSize": 2,
  "cSpell.words": [
    "booktez",
    "boostwidth",
    "Drawerdefault",
    "fromlogin",
    "hasborder",
    "isdisabled",
    "isfilled",
    "isopen",
    "isrightpath",
    "issingle",
    "KAKAO",
    "logocolor",
    "logoicon",
    "menuposition",
    "opentoright",
    "Pretendard",
    "reducewidth",
    "rightpath",
    "signup"
  ],
}
